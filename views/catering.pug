block scripts
    script(src="/static/javascript.js")

block style
     style
      include ../static/css styling sheets/catering-style.css

block content
    <section id="body-sec">
        <div id="div-one">
            <h3 id="big-text">CATERING</h3>
        </div>
    </section>

        //- set title font 
    <div id="cat-head">
        <h3>CATERING MENU</h3>
    </div>

        //- set catering menu blocks 
    <section id="grid-con">
        <div class="grid-container">
            <div class="grid-item">
                <h3>Menu</h3>
                <img src="static/catering/cat-img-1.jpg" alt="" height="300" width="300">
            </div>
            <div class="grid-item">
                <h3>Service</h3>
                <img src="static/catering/cat-img-3.jpg" alt="" height="300" width="300">
            </div>
            <div class="grid-item">
                <h3>Delivery</h3>
                <img src="static/catering/cat-img-2.jpg" alt="" height="300" width="300">
            </div>
            <div class="grid-item">
                <h3>About</h3>
                <img src="static/catering/cat-img-4.jpg" alt="" height="300" width="300">
            </div>
        </div>
    </section>

     //- set advertisement 
    <div id="advertise">
        
     </div>
     
             
        //- set footer 
     <section id="container-final">
        <div id="foot-text">
            <h3>CONTACT</h3>
        </div>

            //- set  social logos 
        <div id="social-logo">
            <a href="#">
                <img src="static/footer-logo/foot-img-1.png" alt="" id="logo-png1">
            </a>

            <a href="#">
                <img src="static/footer-logo/foot-img-2.png" alt="" id="logo-png2">
            </a>

            <a href="#">
                <img src="static/footer-logo/foot-img-3.png" alt="" id="logo-png3">
            </a>

            <a href="#">
                <img src="static/footer-logo/foot-img-4.png" alt="" id="logo-png4">
            </a>

            <a href="#">
                <img src="static/footer-logo/foot-img-5.png" alt="" id="logo-png5">
            </a>

            <a href="#">
                <img src="static/footer-logo/foot-img-6.png" alt="" id="logo-png6">
            </a>
        </div>

        <div id="form">
            <div id="products">
                <h3>PRODUCTS</h3>
                <h4>Italian special</h4>
                <h4>Thai food</h4>
                <h4>Indian food</h4>
                <h4>continental</h4>
                <h4>deserts</h4>
            </div>

            <div id="about">
                <h3>ABOUT</h3>
                <h4>Catering</h4>
                <h4>delivery</h4>
                <h4>Contact</h4>
                <h4>Restourant</h4>
                <h4>Blog</h4>

            </div>

            <div id="support">
                <h3>SUPPORT</h3>
                <h4> Our Policy</h4>
                <h4>terms & Conditions</h4>
                <h4>FAQs</h4>
                <h4>Financial</h4>
            </div>

                //- set login form body 
            <div id="form-inner">
                <form action="">
                    <h3>Login</h3>
                    <div class="input-main">
                        <input type="text" placeholder="Enter name" id='name'>
                    </div>
                    <div class="input-main">
                        <input type="input-main" placeholder="Enter password" id='password'>
                    </div>
                    <div id="btn-foot">
                        <button>Sign in</button>
                    </div>
                </form>

                    //- set contact info logos 
                <div id="address">
                    <img src="static/footer-logo/call.png" alt="" id="foot-logo-1">
                    <img src="static/footer-logo/target.png" alt="" id="foot-logo-2">
                    <img src="static/footer-logo/clock.png" alt="" id="foot-logo-3">
                </div>
            </div>

                //- set contact info text 
            <div id="address-info">
                <h3>+999 (345) 876 9870</h3>
                <h3> 21-D new york NY colony</h3>
                <h3>Opens monday-friday</h3>
